{
    "manifest_version": 3,
    "name": "AI",
    "description": "An example Chrome extension.",
    "version": "1.0",
    "permissions": ["scripting", "storage", "activeTab", "identity"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "assets/icon-chatgpt.png",
            "32": "assets/icon-chatgpt.png",
            "48": "assets/icon-chatgpt.png",
            "128": "assets/icon-chatgpt.png"
        },
        "default_title": "AI Chat",
        "default_popup": "popup.html",
        "default_state": "enabled"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": ["<all_urls>"]
}